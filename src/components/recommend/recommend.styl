 @import '../../styles/mixins.styl'
 .recomend
   margin-left: 24px
   margin-right: 24px
   padding-top: 20px;
 
   .title
     float left
     height 47px
     line-height: 47px
     width: 100%;
   
     .title-icon
       width: 42px
       height 42px
     .title-desc
       color: #333333
       padding-left: 3px;
   .recomend-list
     .recomend-item
       display flex
       padding-bottom: 20px
       width: 100%
       padding-top: 20px;
       .recomend-img 
         width: 200px
         height 200px 
       .recomend-info 
         padding-left: 20px
         padding-top: 30px
         .recomend-info-title
          font-size: 40px
          padding-bottom: 32px
          color: #212121
         .recomend-info-desc
          font-size: 22px
          padding-bottom: 32px
          color: #616161
          max-width: 500px
          ellipsis()
         .recomend-info-price-unt
          color: #ff8300
         .recomend-info-price
          font-size: 35px
          color: #ff8300
         .recomend-info-price-unts
           font-size: 24px
           color: #616161
           padding-left: 3px
         
        
     
       



     
    